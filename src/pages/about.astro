---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '../components/Nav/index.jsx';
---

<html lang="en">
	<head>
		<MainHead title="About | Taiming Shi" description="About Taiming Shi" />
		<style lang="scss">
			.heroImg {
				max-height: 40rem;
				object-fit: cover;
				overflow: hidden;

				img {
					width: 100%;
				}
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1>About Me!</h1>
			<div class="heroImg">
				<img width="1400" height="800" src="https://images.pexels.com/photos/1631677/pexels-photo-1631677.jpeg"/>
			</div>
			<div class="bio wrapper wrapper__readable mt8">
				<p>
				Hi! Thanks for clicking in!
        This page will be updated soon.

				</p>
				
			</div>
		</div>
		<Footer />
	</body>
</html>
